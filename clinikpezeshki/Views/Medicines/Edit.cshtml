@model Medicine
@{
    ViewData["Title"] = "ویرایش دارو";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
<h4>ویرایش دارو</h4>
<br />
<form class="row g-3" asp-action="Edit">
    <div class="col-md-6 form-group">
        <label asp-for="Name" class="control-label"></label>:<br />
        <input asp-for="Name" class="form-control m-1" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6 form-group">
        <label asp-for="PersionName" class="control-label"></label>:<br />
        <input asp-for="PersionName" class="form-control m-1" />
        <span asp-validation-for="PersionName" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="col-12 form-group ">
        <input type="submit" value="ویرایش" class="btn btn-warning opacity-75 float-end" />
    </div>
</form>
<div class="col-12">
    <a class="btn btn-outline-primary m-2" asp-action="Index">برگشت به داروها</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
