@model IEnumerable<clinikpezeshki.Models.Entitys.Reservation>

@{
    ViewData["Title"] = "قرار ملاقات ها";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
<h1>قرار ملاقات ها</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">قرار ملاقات جدید</a>
</p>
<table class="table table-hover table-striped sampleTable">
    <thead class="mt-2">
        <tr>
            <th scope="col">
                #
            </th>
            <th scope="col">
                نام و نام خانوادگی دکتر
            </th>
            <th scope="col">
                نام و نام خانوادگی بیمار
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-striped">
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    <ul class="nav gap-2">
                        <li class="nav-item"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">ویرایش</a></li>
                        <li class="nav-item"><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">پاک کردن</a></li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    @{
       await  Html.RenderPartialAsync("_IndexScripts");
    }
}
