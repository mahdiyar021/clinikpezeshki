@model IEnumerable<clinikpezeshki.Models.Entitys.Prescription>

@{
    ViewData["Title"] = "نسخه های من";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
<h1>نسخه های من</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">نسخه جدید</a>
</p>
<table class="table table-hover table-striped sampleTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">تاریخ</th>
            <th scope="col">نام بیمار</th>
        </tr>
    </thead>
    <tbody class="table-striped">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    <ul class="nav gap-2">
                        <li class="nav-item"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">ویرایش</a></li>
                        <li class="nav-item"><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">پاک کردن</a></li>
                        <li class="nav-item"><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">جزئیات</a></li>
                    </ul>
                </td>

            </tr>
        }
    </tbody>
</table>
@section Scripts{
    @{
       await  Html.RenderPartialAsync("_IndexScripts");
    }
}