@model clinikpezeshki.Models.Entitys.Employee

@{
    ViewData["Title"] = "جزئیات کارمند";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
<h1>جزئیات کارمند</h1>
<br />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.LastName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.LastName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Username)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Username)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Password)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Password)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Age)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Age)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Gender)
    </dt>
    @if (Model?.Gender == 1)
    {
        <dd class="col-sm-10">مرد</dd>
    }
    @if (Model?.Gender == 0)
    {
        <dd class="col-sm-10">زن</dd>
    }
    @if (Model?.Gender == 2)
    {
        <dd class="col-sm-10">ناشناس</dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.NationalId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.NationalId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.HomeNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.HomeNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Phonenumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Phonenumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Adrress)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Adrress)
    </dd>
</dl>
<div class="d-grid gap-2 d-md-block m-4">
    <a class="btn btn-outline-warning ms-2" asp-action="Edit" asp-route-id="@Model?.Id">ویرایش</a>
    <a class="btn btn-outline-primary ms-2" asp-action="Index">برگشت به کارمند ها</a>
</div>